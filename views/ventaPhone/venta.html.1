{{extend 'layoutin.html'}}
<h1>{{=A("Regresar",_href=URL(r=request,f='index'))}}</h1>
<h2>Evento: </h2><h3>{{=datosUnicos.evento.nEvento}}</h3>
<h2>Zona: </h2><h3>{{=datosUnicos.zona.nZona}}</h3>
<h2>Precio de la zona: </h2><h3>{{=datosUnicos.zona.costoZona}}</h3>
<h2>Lista de asiento(s) seleccionado(s): </h2>
<table>
{{for num in numAsiento:}}
<tr>
<td><h2><h3>{{=num}}</h3></h2></td>
</tr>
{{pass}}
</table>
{{=form}}
<h2>Costo total de los asientos con descuento y envio: </h2><h3><div id="target">{{=form}}</div></h3>
<script>
jQuery(document).ready(function(){ 
    jQuery('#direccionId').fadeOut('slow');
});        
$("#formId").attr('change', ajax('precios',['medioEnvioId','campanaId'],'target'));
$('#medioEnvioId').change(function(){ 
    $('#medioEnvioId').attr('onChange',  ajax('precios',['medioEnvioId','campanaId'],'target'));
        if(jQuery('#medioEnvioId').attr('value')=="1"){
            jQuery('#direccionId').fadeOut('slow');        
        }else{
            jQuery('#direccionId').fadeIn('slow');
}); 
$('#campanaId').change(function(){ 
    $('#campanaId').attr('onChange',  ajax('precios',['medioEnvioId','campanaId'],'target'));
}); 
</script>
